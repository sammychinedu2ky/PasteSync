{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "cache": {
      "type": "container.v0",
      "connectionString": "{cache.bindings.tcp.host}:{cache.bindings.tcp.port}",
      "image": "docker.io/library/redis:7.4",
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        }
      }
    },
    "frontend": {
      "type": "executable.v0",
      "workingDirectory": "frontend",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "env": {
        "NODE_ENV": "development",
        "services__backend__http__0": "{backend.bindings.http.url}",
        "services__backend__https__0": "{backend.bindings.https.url}",
        "services__backend__backend__0": "{backend.bindings.backend.url}",
        "PORT": "{frontend.bindings.http.targetPort}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 3000,
          "targetPort": 8000,
          "external": true
        }
      }
    }
  }
}